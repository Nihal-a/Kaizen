    <div class="d-flex justify-content-center">
        <button id="submit" class="yellobtn">Save and Checkout</button>

    </div>



</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/es6-shim/0.35.3/es6-shim.min.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<script>
    const uploadbtns = document.querySelectorAll('.uploadbtn')


    uploadbtns.forEach(function (uploadbtn) {
        uploadbtn.addEventListener('change', (event) => {
            const src = URL.createObjectURL(event.target.files[0]);

            let formCheck = uploadbtn.parentElement
            let formCheckParent = formCheck.parentElement
            let avatarImg = formCheckParent.querySelector('.avatarImg')
            avatarImg.src = src

        })
    });


    document.getElementById("submit").addEventListener("click", (e) => {
        e.preventDefault()
        let id = document.getElementById('id').value

        let demoForm = document.getElementById('demoForm')
        let inputs = demoForm.querySelectorAll('.input')
        let files = demoForm.querySelectorAll('.files')
        var formData = new FormData();
        let valid = true

        for (i = 0; i < inputs.length; i++) {

            formData.append(inputs[i].name, inputs[i].value);


            if (inputs[i].value == "") {
                console.log(">>>>>>>>>>>>>>>>>>>>>>>", inputs[i].name)
                inputs[i].classList.add("invalid");
                valid = false

            } else {
                inputs[i].classList.remove("invalid");
            }
        }
        console.log(files)

        for (i = 0; i < files.length; i++) {
            let file = files[i]

            formData.append('photo', file.files[0]);


            if (files[i].files.length <= 0) {
                console.log(">>>>>>>>>>>>>>>>>>>>>>>", files[i].name)
                files[i].classList.add("invalid");
                valid = false

            } else {
                files[i].classList.remove("invalid");
            }
        }






        if (valid) {
            alert()


            axios.post(`/form/${id}`, formData, {
                headers: {
                    'Content-Type': 'multipart/form-data'
                }
            }).then(function (response) {
                console.log(response)
                if (response.data.formSave) {
                    window.location.href = `/checkout/${response.data.id}`

                } else {
                    window.location.href = `/checkout/${response.id}`

                }
            });

        }











    });




</script>